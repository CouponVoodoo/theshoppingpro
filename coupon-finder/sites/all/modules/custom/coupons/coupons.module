/**
* TO GERNERATE GUID
*/
 
 function getGUID(){
    if (function_exists('com_create_guid')){
        return com_create_guid();
    }else{
        mt_srand((double)microtime()*10000);//optional for php 4.2.0 and up.
        $charid = strtoupper(md5(uniqid(rand(), true)));
        $hyphen = chr(45);// "-"
        $uuid = substr($charid, 0, 8).$hyphen
            .substr($charid, 8, 4).$hyphen
            .substr($charid,12, 4).$hyphen
            .substr($charid,16, 4).$hyphen
            .substr($charid,20,12)
            ;
        return $uuid;
    }
}

/**
 * Implements hook_init
 */
 
 function coupons_init() {
	// this function required. please don't remove it until u are not aware fully.
	// set it to 600 second
	drupal_set_time_limit(600);

	/* GETTING USERS GUID*/
	if (!isset($_COOKIE['CV_User_GUID'])) {
		$CV_User_GUID = getGUID();
		setcookie('CV_User_GUID', $CV_User_GUID, (time()+60*60*24*365*10),'/', 'couponvoodoo.com');
		$new_user = 1;
	} Else {
		$CV_User_GUID = $_COOKIE['CV_User_GUID'];		
		$new_user = 0;
	}
	
	/* GETTING USERS OS*/
	if (!isset($_COOKIE['CV_OS'])) {
		$os = 'unknown';
		$user_agent = strtolower($_SERVER['HTTP_USER_AGENT']);
		if (strpos($user_agent,'android') > 1) {
			$os = 'android';
		} else {
			if (strpos($user_agent,'iphone') > 1) {
				$os = 'iphone';
			}else{
				if (strpos($user_agent,'ipad') > 1) {
					$os = 'ipad';
				}else{
					if (strpos($user_agent,'windows') > 1) {
						$os = 'windows';
					} else {
						if (strpos($user_agent,'blackberry') > 1) {
							$os = 'blackberry';
						} else {
							if (strpos($user_agent,'linux') > 1) {
								$os = 'linux';
							} else {
								$os = 'others';
							}
						}
					}
				}
			}
		}
		setcookie('CV_OS', $os, (time()+60*60*24*1),'/', 'couponvoodoo.com');
	} else {
	$os = $_COOKIE['CV_OS'];
	}
	/* GETTING USERS REFERER*/
	if (!isset($_COOKIE['CV_Traffic_Source'])) { 
		if (isset($_SERVER['HTTP_REFERER'])) {
			$new_visit = 1;
			$referer = $_SERVER['HTTP_REFERER'];
			$uri = parse_url($_SERVER['HTTP_REFERER']);
			// $domain = substr($uri['host'], strpos($uri['host'], ".")+1, strlen($uri['host']));
			$domain = $uri['host'];
			
			
			if ( $parts = parse_url( "$referer" ) ) {
			   $host = $parts[ "scheme" ] . "://" . $parts[ "host" ];
			}
			if (strpos($domain,'google') != false) {
				$parts = parse_url($referer);
				parse_str($parts['query'], $query);
				// $traffic_source = rawurlencode($host).'---'.rawurlencode ($query['q']).'---'.rawurlencode($query['adurl']);
				$traffic_source = 'Ggl-'.rawurlencode($query['q']);
			} else {
				$traffic_source = rawurlencode($domain);
			}
		} ELSE {
			$new_visit = 1;
			$referer = 'Direct';
			$traffic_source = 'Direct';
		}
		setcookie('CV_Traffic_Source', $traffic_source, (time()+60*60*24*1),'/', 'couponvoodoo.com');
		setcookie('CV_Referrer', $referer, (time()+60*60*24*1),'/', 'couponvoodoo.com');
		
	} Else {
		$new_visit = 0;
	}
	
	
	if ($os != 'others') {
		if ($new_user == 1) {
			mixpanel_track('NEW USER', array(
				'GUID' => $CV_User_GUID,
				'OS' => $os,
				'REFERER' => $referer,
				'TRAFFIC SOURCE' =>  $traffic_source
				)
			);
		} Else {
			if ($new_visit ==1) {
			mixpanel_track('NEW VISIT', array(
				'GUID' => $CV_User_GUID,
				'OS' => $os,
				'REFERRER' => $referer,
				'TRAFFIC SOURCE' =>  $traffic_source
				)
			);		
			}
		}
	}
}

function coupons_viewdemo($ajax) {
  if ($ajax) {
    ctools_include('ajax');
    ctools_include('modal');

    $form_state = array(
        'ajax' => TRUE,
        'title' => t('CouponVoodoo Demo'),
    );

    // Use ctools to generate ajax instructions for the browser to create
    // a form in a modal popup.
    $output = ctools_modal_form_wrapper('coupons_finder_form', $form_state);

    // If the form has been submitted, there may be additional instructions
    // such as dismissing the modal popup.
    if (!empty($form_state['ajax_commands'])) {
      $output = $form_state['ajax_commands'];
    }

    // Return the ajax instructions to the browser via ajax_render().
    print ajax_render($output);
    drupal_exit();
  } else {
    return drupal_get_form('coupons_finder_form', true, true);
  }
}

